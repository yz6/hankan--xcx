.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
   background: #F2F2F2;
} 
.templageBox{
  width: 100vw;
  height: 92vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.templateBody{
  width: 100vw;
  height: 138vw;
  margin: 0 auto;
  position: relative;
}
.bottomBar{
  width: 100%;
  height: 8vh;
  background: #fff;
   display: flex;
}
.bottomBar>view{
  height: 100%;
  width: 22%;
  line-height: 8vh;
  text-align: center;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottomBar>view:first-child{
  position: relative
}
.bottomBar>view:first-child::after{
  content: '';
  position: absolute;
  right: 0;
  top: 30%;
  width: 1rpx;
  height: 40%;
  background: #F2F2F2;
}
.bottomBar>view:nth-child(2){
  position: relative;
}
.bottomBar>view:nth-child(2):after{
  content: '';
  position: absolute;
  right: 0;
  top: 30%;
  width: 1rpx;
  height: 40%;
  background: #F2F2F2;
}
.bottomBar>view:last-child{
  width: 34%;
  line-height: 8vh;
}

