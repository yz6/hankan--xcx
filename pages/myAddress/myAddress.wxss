/* pages/myAddress/myAddress.wxss */
.content{
  width: 100%;
  height: 100vh;
  background: #F2F2F2;
}
.addressBox{
  padding-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  color: #232321;
}
.addressItem{
  margin-bottom: 10rpx;
  background: #fff;
}
.addressItem>view{
  padding: 20rpx 30rpx;
}
.itemTop{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.addressItem>.itemBody{
  border-bottom: 2rpx solid #F2F2F2;
  padding-top: 0;
}
.addressItem>.itemBottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}
.btnBox{
  color: #284E99;
}
.btnBox text{
  margin: 0 20rpx;
}
.defaultAddress{
  display: flex;
  align-items: center;
}
.defaultBIcon{
  width: 32rpx;
  height: 32rpx;
  border: #D1D1D1 2rpx solid;
  border-radius: 50%;
  margin-right: 18rpx;
}
.addBtn{
  width: 90%;
  height: 96rpx;
  margin: 0 auto;
  line-height: 96rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FFFFFF;
  background: #284E99;
  border-radius: 10rpx;
  margin-top: 30rpx;
}